
<h1><%= @project.title %></h1>

<h4> Add Volunteer</h4>
<form action="/projects/<%= @project.id %>/volunteers" method="post">
  <div class="form-group">
    <label for="name">Volunteer Name</label>
    <input class="form-control" type="text" name="name">
  </div>
  <button type="submit">Add</button>
</form>

<% if @volunteers.any?() %>
<h3>Volunteers</h3>
<ul>
<% @volunteers.each do |volunteer| %>
  <li><a href="/volunteer/<%= volunteer.id %>"> <%= volunteer.name %></a></li>
<% end %>
</ul>
<% else %>
<p>There are no volunteers yet</p>
<% end %>

<a href="/projects/<%= @project.id %>/edit">Edit Project</a><br>
<a href="/">Return Home</a>
